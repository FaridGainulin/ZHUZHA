.input
  height: 45px
  width 100%
  padding: 0 28px;
  font-family: 'Montserrat-Regular'
  font-weight: 400
  font-size: 14px;
  line-height: 120%
  color: #2B2A29
  border: 1px solid #2B2A29
  border-radius: 30px;
  background: #E1E1E1
  position relative
  overflow hidden

  &.active
    .input__progress
      opacity 1
      min-width: 40px
      span
        opacity 1
  &__progress
    position: absolute
    height: 100%
    top: 0
    left: 0
    background: #F55FAF
    opacity 0
    min-width: 0
    display: flex
    align-items: center
    justify-content: center
    font-size: 16px
    line-height: 16px
    transition: min-width 1s, opacity 0.8s
    color: #2B2A29
    font-weight: bold
    border-radius: 30px
    +above($breakpoints.xxl)
      font-size: 20px
      line-height: 20px
    span
      opacity 0
      transition: 2s

  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s
  &:hover
    border 1px solid #F55FAF
  &:focus
    color: #2B2A29
    caret-color: #F55FAF
    border 1px solid #F55FAF
    box-shadow: 3px 3px 20px 0px #F55FAF
    background: #fff
    &::placeholder
      color: #2B2A29
  &::placeholder
    color: #2B2A29
  +above($breakpoints.sm)
    height: 50px
    font-size: 14px;
  +above($breakpoints.md)
    height: 55px
    font-size: 16px;
  +above($breakpoints.xxl)
    font-size: 18px;
    height: 60px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    background: #fff
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--textarea
    outline none
    border: none
    padding: 15px 10px 10px 20px
    resize: none
    height: 70px
    width 280px
    border-radius: 20px
    +above($breakpoints.sm)
      height: 120px;
      width: 220px;
    +above($breakpoints.md)
      border-radius: 30px
      height: 135px;
      width: 240px;
    +above($breakpoints.xxl)
      border-radius: 40px
      padding: 30px 10px 10px 20px
      height: 180px
      width 260px

  &--secondary
    color: #E1E1E1
    background-color transparent
    border 1px solid #E1E1E1
    &::placeholder
      color: #E1E1E1
    &:focus
      color: #E1E1E1
      caret-color: #F55FAF
      border 1px solid #F55FAF
      box-shadow: 3px 3px 20px 0px #F55FAF
      background: transparent
      &::placeholder
        color: #E1E1E1

  &--city
    color: #fff
    background-color transparent
    border 1px solid #fff
    &::placeholder
      color: #fff
    &:focus
      color: #fff
      caret-color: #F55FAF
      border 1px solid #F55FAF
      box-shadow: 3px 3px 20px 0px #F55FAF
      background: transparent
      &::placeholder
        color: #fff


