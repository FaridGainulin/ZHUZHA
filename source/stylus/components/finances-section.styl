.finances-section
  // background-image: url('../images/finances-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff


  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 40px 0 60px 0
    +above($breakpoints.md)
      padding 60px 0 90px 0
    +above($breakpoints.xxl)
      padding 76px 0 148px 0

  &__gem-large
    position: absolute
    width: 60px;
    height: auto;
    bottom: 202px;
    right: -73px;
    +above($breakpoints.sm)
      width: 80px;
      bottom: 254px;
      right: -118px;
    +above($breakpoints.md)
      width: 130px;
      bottom: 294px;
      right: -170px;
    +above($breakpoints.xxl)
      width 145px
      bottom: 387px
      right: -251px

  &__gem-small
    position: absolute
    width: 25px;
    height: auto;
    top: 62px;
    left: -17px;
    +above($breakpoints.sm)
      width: 35px;
      top: 96px;
      left: -61px;
    +above($breakpoints.md)
      width: 45px;
      top: 150px;
      left: -100px;
    +above($breakpoints.xxl)
      width 57px
      top: 159px
      left: -178px

  &__polish
    position: absolute
    width: 120px;
    height: auto;
    bottom: 0;
    left: -124px;
    +above($breakpoints.sm)
      width: 220px;
      bottom: 0;
      left: -127px;
    +above($breakpoints.md)
      width: 370px;
      bottom: 0;
      left: -295px;
    +above($breakpoints.xxl)
      width 590px
      bottom: 3px
      left: -513px

  &__title,
  &__sub-title
    text-align: center

  &__sub-title
    padding 5px 0 20px 0
    +above($breakpoints.sm)
      padding 5px 0 40px 0
    +above($breakpoints.md)
      padding 5px 0 60px 0
    +above($breakpoints.xxl)
      padding 5px 0 73px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    position relative
    width 280px !important
    background-color #E1E1E1
    border-radius: 15px
    padding: 20px 10px 20px 15px
    display: flex
    flex-direction: column
    gap: 6px
    +above($breakpoints.sm)
      width 235px !important
      border-radius: 20px
      padding: 15px 10px 10px 20px
      height: 120px
    +above($breakpoints.md)
      width 308px !important
      border-radius: 25px
      padding: 20px 10px 10px 20px
      height: 170px
    +above($breakpoints.xxl)
      width 380px !important
      height: 200px
      border-radius: 30px
      padding: 24px 10px 10px 31px

  &__card-icon
    position: absolute
    width 37px
    height: auto
    top: 0
    right: 8px
    +above($breakpoints.sm)
      width 50px
      right: 10px
    +above($breakpoints.md)
      width 60px
      right: 10px
    +above($breakpoints.xxl)
      width 84px
      right: 15px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    text-align: center
    +above($breakpoints.sm)
      margin-top 25px
      text-align: end
      flex-direction: row
      justify-content flex-end
    +above($breakpoints.md)
      margin-top 30px
      gap: 20px
    +above($breakpoints.xxl)
      margin-top 34px
      gap: 28px

  &__bottom-left
    display: flex
    flex-direction: column
    align-items: center
    gap: 8px
    +above($breakpoints.sm)
      align-items: flex-end
    +above($breakpoints.md)
      gap: 10px
    +above($breakpoints.xxl)
      gap: 13px

  &__bottom-right
    position relative
    border-radius: 15px
    padding 15px 10px
    background-color #2B2A29
    width 100%
    display: flex
    justify-content center
    +above($breakpoints.sm)
      justify-content flex-end
      width 480px
      border-radius: 20px
      padding: 20px 20px 15px 10px
    +above($breakpoints.md)
      width 636px
      border-radius: 25px
      padding: 25px 25px 20px 10px
    +above($breakpoints.xxl)
      width 772px
      height: 250px
      padding: 29px 30px 23px 10px
      border-radius: 30px

  &__bottom-img
    position: absolute
    width: 120px;
    height: auto;
    top: -64px;
    left: -75px;
    +above($breakpoints.sm)
      width: 180px;
      top: 30px;
      left: 3px;
    +above($breakpoints.md)
      width: 330px;
      top: -1px;
      left: -13px;
    +above($breakpoints.xxl)
      width 450px
      top: -35px
      left: -23px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    width 100%
    +above($breakpoints.sm)
      width 280px
      gap: 7px
    +above($breakpoints.md)
      gap: 9px
      width 300px
    +above($breakpoints.xxl)
      width 320px


