.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #2b2a29

  &__container
    position relative
    z-index 1
    text-align: center
    text-transform: uppercase
    color: #fff
    padding 20px 0 0 0
    +above($breakpoints.sm)
      text-align: start
      padding 70px 0 50px 0
    +above($breakpoints.md)
      padding 90px 0 80px 0
    +above($breakpoints.xxl)
      padding 136px 0 107px 0

  &__sub-title
    color: #A0A0A0
    padding 10px 0 25px 0
    +above($breakpoints.sm)
      padding 13px 0 30px 0
    +above($breakpoints.md)
      padding 18px 0 40px 0
    +above($breakpoints.xxl)
      padding 20px 0 52px 0

  &__form
    position relative
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    background-color #E1E1E1
    border-radius: 50%
    padding: 100px 30px 20px 30px;
    width 308px
    height: 308px
    +above($breakpoints.sm)
      padding: 100px 40px 57px 40px;
      width: 320px;
      height: 320px;
    +above($breakpoints.md)
      gap: 7px
      padding 115px 32px 67px 32px
      width 380px
      height: 380px
    +above($breakpoints.xxl)
      width 405px
      height: 405px
      padding 120px 42px 87px 42px
      gap: 9px

  &__form-icon
    position: absolute
    width: 130px;
    height: auto;
    top: -15px;
    left: 50%
    transform: translateX(-50%)
    +above($breakpoints.sm)
      width: 132px;
      top: -17px;
    +above($breakpoints.md)
      width: 150px;
      top: -17px;
    +above($breakpoints.xxl)
      width 184px
      top: -27px

  &__img
    width 308px
    height: auto
    margin 15px auto 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 553px;
      bottom: 0;
      right: -150px;
    +above($breakpoints.md)
      width: 800px;
      right: -218px;
    +above($breakpoints.xxl)
      width 1022px
      right: -371px

  &__gem
    position: absolute
    width 25px
    height: auto
    top: 120px
    left: 0
    +above($breakpoints.sm)
      width 30px
      top: 210px
      left: 6px
    +above($breakpoints.md)
      width 35px
      top: 280px
      left: 6px
    +above($breakpoints.xxl)
      width 40px
      top: 354px
      left: 6px
