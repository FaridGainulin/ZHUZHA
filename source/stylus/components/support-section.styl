.support-section
  background-image: url('../images/support-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #F1e6ea

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 50px 0 60px 0
    +above($breakpoints.md)
      padding 80px 0 90px 0
    +above($breakpoints.xxl)
      padding 124px 0 145px 0

  &__title,
  &__sub-title
    text-align: center

  &__sub-title
    padding 5px 0 20px 0
    +above($breakpoints.sm)
      padding 5px 0 30px 0
    +above($breakpoints.md)
      padding 5px 0 35px 0
    +above($breakpoints.xxl)
      padding 5px 0 44px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 10px
      margin-left 65px
    +above($breakpoints.md)
      gap: 13px
      margin-left 100px
    +above($breakpoints.xxl)
      margin-left 200px
      gap: 16px

  &__card
    width 280px !important
    display: flex
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      width 
      width 610px !important
      gap: 8px
    +above($breakpoints.md)
      width 800px !important
      gap: 10px
    +above($breakpoints.xxl)
      width 900px !important
      gap: 12px

  &__card-icon
    width 16px
    height: auto
    +above($breakpoints.sm)
      width 18px
    +above($breakpoints.md)
      width 20px
    +above($breakpoints.xxl)
      width 22px

  &__bottom
    position relative
    color: #fff
    background-color #2B2A29
    border-radius: 15px
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    padding 15px 10px
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      flex-direction: row
      justify-content space-between
      border-radius: 20px
      padding 20px 20px 15px 30px
      margin-top 40px
    +above($breakpoints.md)
      border-radius: 25px
      padding 25px 25px 20px 40px
      margin-top 80px
    +above($breakpoints.xxl)
      border-radius: 30px
      padding 29px 30px 23px 59px
      margin-top 102px

  &__bottom-img
    position: absolute
    width: 100px;
    height: auto;
    top: -19px;
    left: 286px;
    +above($breakpoints.sm)
      width: 200px;
      top: 29px;
      left: 216px;
    +above($breakpoints.md)
      width: 354px;
      top: -28px;
      left: 270px;
    +above($breakpoints.xxl)
      width 400px
      top: -36px
      left: 367px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    width 100%
    +above($breakpoints.sm)
      width 280px
      gap: 7px
    +above($breakpoints.md)
      gap: 9px
      width 300px
    +above($breakpoints.xxl)
      width 320px
