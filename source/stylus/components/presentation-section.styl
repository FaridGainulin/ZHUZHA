.presentation-section
  background-image: url('../images/presentation-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #fff

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 40px 0 100px 0
    +above($breakpoints.md)
      padding 50px 0 150px 0
    +above($breakpoints.xxl)
      padding 85px 0 224px 0

  &__title-wrapper
    text-align: center
    color: #0B122C
    padding 0 0 20px 0
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      text-align: start
      padding 0 0 25px 0
    +above($breakpoints.md)
      padding 0 0 30px 0
    +above($breakpoints.xxl)
      padding 0 0 39px 0

  &__sub-title
    display: flex
    flex-direction: row
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      gap: 0
      text-align: end
      flex-direction: column
      align-items: flex-end

  &__sub-title-text
    line-height: 123% !important

  &__sub-title-icon
    width 25px
    height: 25px
    +above($breakpoints.sm)
      width 35px
      height: 35px
    +above($breakpoints.md)
      width 40px
      height: 40px
    +above($breakpoints.xxl)
      width 44px
      height: 44px

  &__card
    width 308px !important
    +above($breakpoints.sm)
      width 235px !important
    +above($breakpoints.md)
      width 308px !important
    +above($breakpoints.xxl)
      width 380px !important

  &__img
    width 100%
    height: auto
    border-radius: 18px



