.start-section
  background-image: url('../images/start-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #363534

  &__container
    position relative
    text-align: center
    color: #fff
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 60px 0 60px 0
    +above($breakpoints.md)
      padding 90px 0 90px 0
    +above($breakpoints.xxl)
      padding 143px 0 146px 0

  &__gem-large
    position: absolute
    width: 60px;
    height: auto;
    top: 129px;
    left: -67px;
    +above($breakpoints.sm)
      width: 80px;
      top: 177px;
      left: -69px;
    +above($breakpoints.md)
      width: 130px;
      top: 248px;
      left: -126px;
    +above($breakpoints.xxl)
      width 145px
      top: 317px
      left: -100px

  &__gem-small
    position: absolute
    width: 25px;
    height: auto;
    bottom: 165px;
    right: -36px;
    +above($breakpoints.sm)
      width: 35px;
      bottom: 203px;
      right: -12px;
    +above($breakpoints.md)
      width: 45px;
      bottom: 260px;
      right: -61px;
    +above($breakpoints.xxl)
      width 57px
      bottom: 326px
      right: -98px

  &__sub-title
    padding 8px 0 20px 0
    +above($breakpoints.sm)
      padding 5px 0 30px 0
    +above($breakpoints.md)
      padding 5px 0 40px 0
    +above($breakpoints.xxl)
      padding 5px 0 46px 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px


.owner-section
  background-image: url('../images/owner-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #fbd0e1

  &__container
    position relative
    text-align: center
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 50px 0 60px 0
    +above($breakpoints.md)
      padding 80px 0 90px 0
    +above($breakpoints.xxl)
      padding 139px 0 148px 0

  &__sub-title
    padding 8px 0 15px 0
    +above($breakpoints.sm)
      padding 8px 0 30px 0
    +above($breakpoints.md)
      padding 10px 0 40px 0
    +above($breakpoints.xxl)
      padding 12px 0 50px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 10px 0px
    +above($breakpoints.md)
      gap: 15px 0px
    +above($breakpoints.xxl)
      margin-left 100px
      gap: 17px 0px

  &__card
    width 308px !important
    display: flex
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      gap: 8px
      width 400px !important
    +above($breakpoints.md)
      gap: 10px
      width 515px !important
    +above($breakpoints.xxl)
      width 566px !important
      gap: 13px

  &__card-icon
    width 10px
    height: auto
    +above($breakpoints.sm)
      width 18px
    +above($breakpoints.md)
      width 20px
    +above($breakpoints.xxl)
      width 22px

  &__form
    width 100%
    background-color #2B2A29
    border-radius: 15px
    padding 15px 10px
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
      border-radius: 20px
      gap: 8px
      padding 18px 0
      margin-top 40px
    +above($breakpoints.md)
      border-radius: 25px
      gap: 10px
      padding 20px 0
      margin-top 70px
    +above($breakpoints.xxl)
      margin-top 100px
      border-radius: 30px
      gap: 12px
      padding 25px 0
    & > *
      width 288px !important
      +above($breakpoints.sm)
        width 230px !important
      +above($breakpoints.md)
        width 300px !important
      +above($breakpoints.xxl)
        width 370px !important


.owner-card-position
  +above($breakpoints.sm)
    margin-left -75px
  +above($breakpoints.md)
    margin-left -65px
  +above($breakpoints.xxl)
    margin-left -70px

.start-item
  width 280px !important
  +above($breakpoints.sm)
    width 320px !important
  +above($breakpoints.md)
    width 340px !important
  +above($breakpoints.xxl)
    width 380px !important
.input-city-position
  position relative
  left: -29px;
  top: -1px;
