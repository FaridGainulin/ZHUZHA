.desktop-pagination
  display: flex
  flex-direction: row
  justify-content center
  gap: 0px
  margin-top 10px
  +above($breakpoints.sm)
    margin-top 20px
    gap: 10px
  +above($breakpoints.md)
    margin-top 35px
    gap: 12px
  +above($breakpoints.xxl)
    gap: 16px
    margin-top 40px
.swiper-pagination-bullet
  background-color #F8F5F2
  border 1px solid #AFAFAF
  width: 7px
  height: 7px
  border-radius: 50%
  opacity: 1
  +above($breakpoints.sm)
    width: 8px
    height: 8px
  +above($breakpoints.md)
    width: 9px
    height: 9px
  +above($breakpoints.xxl)
    width: 10px
    height: 10px
.swiper-pagination-bullet-active
  background-color: #B9C878

.swiper-progress-desktop
  position relative !important
  height: 6px !important
  overflow: hidden
  background: #F4EEE9
  margin: 14px 0 0 0
  border-radius: 10px !important
  +above($breakpoints.sm)
    display: none
  .swiper-pagination-progressbar-fill
    border-radius: 10px !important
    background: #6D58B7

.button-next,
.button-prev
  display: none
  +above($breakpoints.sm)
    display: block
    position: absolute
    border-radius: 8px
    z-index 1
.button-next,
.button-prev
  img
    width 40px
    height: auto
    +above($breakpoints.md)
      width 45px
    +above($breakpoints.xxl)
      width 56px

.button-next
  +above($breakpoints.sm)
    top: 252px
    right: -55px
  +above($breakpoints.md)
    top: 325px
    right: -70px
  +above($breakpoints.xxl)
    top: 415px
    right: -107px

.button-prev
  +above($breakpoints.sm)
    transform: rotateY(180deg)
    top: 252px;
    left: -55px;
  +above($breakpoints.md)
    top: 325px;
    left: -70px;
  +above($breakpoints.xxl)
    top: 415px;
    left: -107px;
