.header-thanks
  &__container
    display: flex
    justify-content space-between
    align-items: center

  &__brand
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      margin-left -20px
      gap: 22px

  &__logo
    width 150px
    height: auto
    +above($breakpoints.sm)
      width 180px
    +above($breakpoints.md)
      width 250px
    +above($breakpoints.xxl)
      width 285px

  &__line
    +above($breakpoints.sm)
      width 2px
      height: 40px
      border-radius: 2px
      background-color #A0A0A0
    +above($breakpoints.md)
      height: 45px
    +above($breakpoints.xxl)
      height: 51px

  &__line,
  &__brand-text
    display: none
    +above($breakpoints.sm)
      color: #A0A0A0
      display: block
    +above($breakpoints.xxl)
      margin-top 10px

  &__connection
    display: flex
    align-items: center
    justify-content center
    gap: 5px
    color: #fff
    background-color #F55FAF
    border-radius: 30px
    width 140px
    height: 25px
    +above($breakpoints.sm)
      gap: 8px
      width 200px
      height: 40px
    +above($breakpoints.md)
      width 230px
      height: 45px
    +above($breakpoints.xxl)
      width 260px
      height: 50px

  &__connection-icon
    width 12px
    height: 12px
    +above($breakpoints.sm)
      width 15px
      height: 15px
    +above($breakpoints.md)
      width 17px
      height: 17px
    +above($breakpoints.xxl)
      width 19px
      height: 19px
